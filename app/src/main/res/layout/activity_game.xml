<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/top_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/cover"
            android:scaleType="centerCrop"/>

        <!-- Game cover and details -->
        <LinearLayout
            android:id="@+id/layout_details"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_image">

            <ImageView
                android:id="@+id/game_cover_act"
                android:layout_width="120dp"
                android:layout_height="160dp"
                tools:src="@drawable/cover"
                android:layout_margin="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/game_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    tools:text="The Witcher 3: Wild Hunt" />

                <TextView
                    android:id="@+id/game_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/game_title"
                    tools:text="EA Sports"
                    android:textSize="15sp"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/game_release_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/game_publisher"
                    android:textColor="@color/text_black"
                    tools:text="2015"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/game_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/game_title"
                    android:layout_alignParentRight="true"
                    tools:text="98"
                    android:textSize="22sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/game_rating_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/game_rating"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    tools:text="1564 votes" />

            </RelativeLayout>
        </LinearLayout>

        <!-- Add-to-lists buttons -->
        <LinearLayout
            android:id="@+id/layout_add_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_details"
            android:layout_margin="10dp">

            <!-- WANT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add_want"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:backgroundTint="@color/button_blue"
                    android:onClick="onAddButtonClick"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/want"
                    android:textColor="@color/text_black"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add_playing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:backgroundTint="@color/button_blue"
                    android:onClick="onAddButtonClick"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/playing"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add_played"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:backgroundTint="@color/button_blue"
                    android:onClick="onAddButtonClick"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/played"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/game_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_add_buttons"
            tools:text="@string/lorem_ipsum"
            android:padding="10dp"/>

        <!-- PLATFORMS -->
        <LinearLayout
            android:id="@+id/layout_platfomrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_description"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/platforms_rv"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/platforms_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- GENRES -->
        <LinearLayout
            android:id="@+id/layout_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_platfomrs"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genres"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/genres_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- THEMES -->
        <LinearLayout
            android:id="@+id/layout_themes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_genres"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/themes"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/themes_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/reviews_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_game_reviews"
            android:layout_below="@id/layout_themes"
            android:layout_margin="10dp"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/button_blue"
            android:onClick="onReviewsClick"/>

        <TextView
            android:id="@+id/screenshots_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/screenshots"
            android:layout_below="@id/reviews_button"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_black"/>
    </RelativeLayout>

</ScrollView>